<div class="jumbotron"><h2 id='title'>Where should we eat today?</h2></div>

<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <ul class="nav navbar-nav navbar-right">
      {{#if this.model.isFinals}}<li>{{#link-to 'finals'}}Enter Finals{{/link-to}}</li>{{/if}}
      <li>{{#if this.isVoting}}<a class="vote-link" {{action 'vote'}}>Submit Vote</a>{{else}}{{#link-to 'votes'}}Vote{{/link-to}}{{/if}}</li>
      <li>{{#link-to 'results'}}Results{{/link-to}}</li>
      <li>{{#link-to 'restaurant'}}Add a Restaurant{{/link-to}}</li>
      <li>{{#link-to 'update'}}Update Restaurants{{/link-to}}</li>
    </ul>
  </div><!-- /.navbar-collapse -->
</nav>

{{outlet}}

<div class = "footer">
  <div class="container">
    <button class="btn btn-sm" {{action "clearVotes"}}>Clear out all votes</button>
    {{#unless this.model.isFinals}}<button class="btn btn-sm" {{action "beginFinals"}}> Start the finals!</button>{{/unless}}
  </div>
</div>
